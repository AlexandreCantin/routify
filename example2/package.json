{
  "name": "routify-docs-2020",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sveltech/routify-site-2020.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "run-p routify rollup",
    "dev-dynamic": "cross-env BUNDLING=dynamic npm run dev",
    "build": "npm run routify -- -b && rollup -c",
    "serve": "spassr --serve-spa --serve-ssr",
    "export": "routify export",
    "deploy:now": "cd scripts/now && npm run deploy",
    "deploy:netlify": "cd scripts/netlify && npm run deploy",
    "rollup": "rollup -cw",
    "routify": "routify -D --extensions svelte,html,svx,md",
    "build:sass": "node-sass --recursive --output dist/build --source-map true --source-map-contents scss",
    "watch:sass": "npm run build:sass && npm run build:sass -- --watch",
    "test:ui": "cypress open",
    "testOLD": "testcafe chrome  test/fixtures/workers.js --hostname=localhost",
    "test:sslOLD": "testcafe \"chrome --allow-insecure-localhost --allow-running-insecure-content\" test/fixtures/workers.js --ssl \"cert=cert/localhost.cert;key=cert/localhost.key;rejectUnauthorized=true\""
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "cypress": "^4.5.0",
    "del": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.9.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-livereload": "^1.2.0",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-workbox": "^5.0.1",
    "spassr": "^1.0.2",
    "svelte": "^3.20.1",
    "testcafe": "^1.8.4",
    "workbox-build": "^5.1.3",
    "workbox-strategies": "^5.1.3"
  },
  "routify": {
    "plugins": [
      {
        "routify-helper": {}
      }
    ]
  },
  "dependencies": {
    "@rollup/plugin-replace": "^2.3.2",
    "workbox-window": "^5.1.3"
  }
}
